@model BookStore.Models.WishListsProducts

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ListedProductsId)
        @Html.HiddenFor(model => model.ProductId)

        <div class="form-group">
            <h2> @Html.LabelFor(model => model.ListId, "ListId", htmlAttributes: new { @class = "control-label col-md-2" })</h2>
            <div class="col-md-10">
                @Html.DropDownList("ListId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ListId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>

    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}