@model BookStore.Models.UsedCouponList

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2 class="text-center text-info"> <strong> Instructions : </strong></h2>
<style>
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">  Enter the coupon that you have received in your mail for the discount in the blank box bellow  </h4>
        <hr />
        <div class=" alert-danger"> @TempData["Result"]</div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CouponEntry, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CouponEntry, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div>
                    <input type="submit" style="" value="Confirm" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Cart", "Index", "ShoppingCart")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}