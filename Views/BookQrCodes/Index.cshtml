@model IEnumerable<BookStore.Models.BookQrCodes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Library.LibraryProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlainText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RenderedImagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RenderedBytes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ScannedCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Library.LibraryProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlainText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RenderedImagePath)
        </td>
        <td>
            @{if (item.RenderedBytes != null)
                {
                    var base64 = Convert.ToBase64String(item.RenderedBytes);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img src="@imgSrc" width="100" height="100" />
                }
                }

            </td>
        <td>
            @Html.DisplayFor(modelItem => item.RenderedBytes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ScannedCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
